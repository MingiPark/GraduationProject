<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lightning"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREV."
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/lightening_prev"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="LIGHTENING"
        android:textSize="50dp"
        android:fontFamily="@font/notosanskr_medium"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightening_switch"
        android:text="POWER"
        android:textSize="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/notosanskr_medium"
        android:switchPadding="150dp"
        android:trackTint="#4CAF50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="BRIGHTNESS"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/notosanskr_medium"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/lightening_seekbar"
        android:layout_gravity="center"
        android:max="100"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:thumb="@drawable/baseline_radio_button_unchecked_black_24dp"/>




</LinearLayout>