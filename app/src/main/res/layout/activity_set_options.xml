<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetOptions"
    android:orientation="vertical"
    android:id="@+id/set_options_root">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/set_options_category"
        android:textColor="#03A9F4"
        android:fontFamily="@font/notosanskr_medium"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="Logout"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_options_camera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="CAMERA"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_options_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="DEVICE "
                android:textSize="22dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_options_lightning"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="LIGHTNING"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_options_music"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="MUSIC"
                android:textSize="22dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_options_diffuser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="#FFF9C4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_medium"
                android:text="DIFFUSER"
                android:textSize="22dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>